<body>
    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="/">Mongoose Scraper</a>
            </div>
            <ul class="nav navbar-nav">
                <li class="active"><a href="/">Home</a></li>
                <li><a href="/saved">Saved Articles</a></li>
                <li><a class="btn btn-danger scrape-new">SCRAPE NEW ARTICLES!</a></li>
            </ul>
        </div>
    </nav>

    <div class="jumbotron text-center">
        <div class="overlay">
        </div>
        <div class="background-image">
        </div>
        <div class="caption">
            <h1>Mongoose Scraper</h1>
            <p>Washington Post Edition</p>
        </div>
    </div>

    <div class="container-fluid article-container">
        {{#each article}}
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3><a class="article-link" target="_blank" href={{link}}>{{title}}</a><a class="btn btn-success save">Save Article</a></h3>
            </div>
            <div class="panel-body">{{snippet}}</div>
        </div>
        {{/each}}
    </div>
    <footer>
    </footer>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="/assets/javascript/app.js"></script>

</body>
