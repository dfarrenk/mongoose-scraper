<body>
    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="/">Mongoose Scraper</a>
            </div>
            <ul class="nav navbar-nav">
                <li><a href="/">Home</a></li>
                <li class="active"><a href="/saved">Saved Articles</a></li>
            </ul>
        </div>
    </nav>

    <div class="jumbotron text-center">
        <div class="overlay">
        </div>
        <div class="background-image">
        </div>
        <div class="caption">
            <h1>Mongoose Scraper</h1>
            <p>Washington Post Edition</p>
        </div>
    </div>

    <div class="container-fluid article-container">

        {{#each article}}
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3><a class="article-link" target="_blank" href={{link}}>{{title}}</a><a class="btn btn-success save">Save Article</a><a class="btn btn-danger delete" data-target={{_id}}>Delete From Saved</a><a class="btn btn-info notes" data-target={{_id}}>Article Notes</a></h3>
            </div>
            <div class="panel-body">{{snippet}}</div>
        </div>
        {{/each}}

    </div>
    <footer>

    </footer>
    <script src="/assets/javascript/app.js"></script>
</body>
